<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="students.list" />
    <context:property-placeholder location="classpath:config.properties" />

    <bean id="windowWidth" class="java.lang.Integer">
        <constructor-arg value="${mainWindow.width}"/>
    </bean>

    <bean id="windowHeight" class="java.lang.Integer">
        <constructor-arg value="${mainWindow.height}"/>
    </bean>

</beans>